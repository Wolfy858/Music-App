<h2> Log in!</h2>

<%= form_tag('/login', method: "post") do %>
  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= label_tag(:email, "Email:") %><br>
    <%=  text_field_tag(:email) %>
  </div>

  <div>
    <%= label_tag(:password, "Password:") %><br>
    <%= password_field_tag(:password) %>
  </div>

  <div>
    <%= submit_tag("Login") %>
  </div>

<% end %>
